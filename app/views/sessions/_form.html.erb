<% unless flash[:errors].nil? %>
<ul>
  <% flash[:errors].each do |error| %>
    <li><%= error  %></li>
  <% end %>
</ul>
<% end %>


<form id="login-form" action="<%= session_url %>" method="post">
  <input type="hidden" name="_method" value="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
  
  <label for="login-form-email" >Email</label>
  <input id="login-form-email" type="text" name="user[email]" value="">

  <label for="login-form-pass">Password</label>
  <input id="login-form-pass" type="password" name="user[password]">

  <input type="submit" value="Login!">

</form>











